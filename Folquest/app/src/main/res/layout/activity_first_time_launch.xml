<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kantele.folquest.FirstTimeLaunchActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Folquest"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a boy or a girl?"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="84dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/buttonBoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boy"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="177dp"
        android:layout_marginStart="74dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonGirl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Girl"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="177dp"
        android:layout_marginLeft="149dp"
        android:layout_marginStart="66dp"
        android:layout_alignBaseline="@+id/buttonBoy"
        android:layout_alignBottom="@+id/buttonBoy"
        android:layout_toEndOf="@+id/buttonBoy" />
</RelativeLayout>
