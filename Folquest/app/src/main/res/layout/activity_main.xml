    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/hamburger_valikko_248x1172px"
        android:layout_width="62dp"
        android:layout_height="293dp"
        android:id="@+id/buttonHolder"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >


        <ImageButton
            android:id="@+id/buttonAvatar"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:text="Avatar"
            app:srcCompat="@mipmap/hahmomuokkas_iconi_192x192px" />

        <ImageButton
            android:id="@+id/buttonQuests"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Quests"
            app:srcCompat="@mipmap/questlog_iconi_192x192px" />

        <ImageButton
            android:id="@+id/buttonShop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Quests"
            app:srcCompat="@mipmap/kauppa_iconi_192x192px" />

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Settings"
            app:srcCompat="@mipmap/settings_iconi_192x192px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StepsLayout"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iv_background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewStepsHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Steps today:" />

            <TextView
                android:id="@+id/textViewSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textViewGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="GOLD" />


        <ImageView
            android:id="@+id/levelBackground"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/level_nelio_256x256px" />

        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textViewGold"
            android:text="LEVEL" />



